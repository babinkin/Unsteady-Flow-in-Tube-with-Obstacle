FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1.71366e-3; // Int = 0.676% Dg = 0.0125

boundaryField
{
    in
    {
        type            fixedValue;
        value           $internalField;
    }
    
    out
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    
    sym
    {
        type            symmetryPlane;
    }

    wall1
    {
        type            kqRWallFunction;
//         type            kLowReWallFunction;
        value           $internalField;
    }
    
    wall2
    {
        type            kqRWallFunction;
//         type            kLowReWallFunction;
        value           $internalField;
    }
    
    wall3
    {
        type            kqRWallFunction;
//         type            kLowReWallFunction;
        value           $internalField;
    }

}


